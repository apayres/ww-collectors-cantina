@rendermode @(new InteractiveServerRenderMode(prerender: false))

@if (Model.IsLoading)
{
    <Loading />
}
else
{
    <div class="container">
        <div class="row">
            @if (Model.Collections == null || !Model.Collections.Any())
            {
                <p>Your favorite collections will appear here.</p>
            }
            else
            {
                foreach (var collection in Model.Collections)
                {
                    <div class="col-12 col-lg-4">
                        <div class="card mb-2">
                            <img src="@collection.ImageUrl" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@collection.Name</h5>
                                <p class="card-text">@collection.Description</p>
                                <a href="/collection/index/@collection.CollectionId" class="btn btn-primary">
                                    <span>View Collection</span>
                                    <i class="bi bi-chevron-right ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
}